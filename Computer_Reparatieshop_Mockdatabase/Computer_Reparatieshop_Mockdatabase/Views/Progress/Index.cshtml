@model IEnumerable<Computer_Reparatieshop_Mockdatabase.ViewModels.ProgressViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>

        html, body {
            height: 100%;
        }

        html {
            display: table;
            margin: auto;
        }

        body {
            background-image: url("../../Images/clearbackground.jpg");
            display: table-cell;
            vertical-align: middle;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 50%;
            color: dodgerblue;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            text-align: center;
        }

        #button {
            border-radius: 25px;
            border: none;
            color: white;
            background-color: aqua;
        }
        #header {
        position:absolute;
        top: 0px;
        background-color: yellow;
        background-size:500px;
        width: 500%;
        transform:translateX(-50%);
        }
    </style>
</head>
<body>
 <div class="navbar" id="header">kln</div>
    
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.basemodel.StartDatum)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.basemodel.EindDatum)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.status)
            </th>
        </tr>
    
    @foreach (var item in Model) {
      
    <tr>
        <td>
            @Html.DisplayFor(modelitem => item.basemodel.StartDatum)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.basemodel.EindDatum)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.status.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
         <!--  @Html.ActionLink("Details", "Details", new { id = item.id }) |-->
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
    }
    
    </table>
</body>
</html>
