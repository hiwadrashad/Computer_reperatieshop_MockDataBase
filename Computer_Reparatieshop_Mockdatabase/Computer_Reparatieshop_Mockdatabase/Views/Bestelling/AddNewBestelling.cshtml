@model Computer_Reparatieshop_Mockdatabase.Models.ModelBestelling

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <style>

        html, body {
            height: 100%;
        }

        html {
            display: table;
            margin: auto;
        }

        body {
            background-image: url("../../Images/abstract.jpg");
            display: table-cell;
            vertical-align: middle;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 50%;
            color: white;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            text-align: center;
            font-size: large;
        }

        #button {
            border-radius: 25px;
            border: none;
            color: white;
            background-color: aqua;
            height: 50px;
            font-weight: bolder;
            width: 250px;
            margin: 10px 40px 10px 40px;
            font-size: large;
        }

    
    </style>
</head>
<body>
    @using (Html.BeginForm("AddNewBestelling", "Bestelling", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.omschrijving)
            <div class="col-md-10">
                @Html.EditorFor(model => model.omschrijving)<br />
                @Html.ValidationMessageFor(model => model.omschrijving)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StoredImage)
            <div class="col-md-10">
                <input type="file" name="StoredImage"><br />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Datum)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Datum)<br />
                @Html.ValidationMessageFor(model => model.Datum)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.extrainformatie)
            <div class="col-md-10">
                @Html.EditorFor(model => model.extrainformatie)<br />
                @Html.ValidationMessageFor(model => model.extrainformatie)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ophalen)
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.ophalen, "Select a list item", new { @class = "form-control" })
                <!--  @Html.EditorFor(model => model.ophalen)<br /> -->
                @Html.ValidationMessageFor(model => model.ophalen)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="button" type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
    </div>
</body>
</html>
